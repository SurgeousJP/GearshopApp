<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="411dp"
    android:layout_height="267dp">

    <ImageView
        android:layout_marginTop="24dp"
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/not_found"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_empty"
        android:layout_width="312dp"
        android:layout_height="24dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineHeight="24sp"
        android:lineSpacingExtra="5sp"
        android:layout_marginTop="12dp"
        android:text="Không có kết quả!"
        android:textAppearance="@style/title_empty"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/content_emp"
        android:layout_width="312dp"
        android:layout_height="21dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="4sp"
        android:text="Vui lòng thử các từ khóa khác"
        android:textAppearance="@style/content_emp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_empty" />
</androidx.constraintlayout.widget.ConstraintLayout>