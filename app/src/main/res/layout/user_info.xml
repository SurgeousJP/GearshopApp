                        android:layout_marginVertical="8dp"
                        android:layout_marginLeft="16dp"
                        android:gravity="top"
                        android:lineSpacingExtra="4sp"
                        android:text="Mật khẩu"
                        android:textAppearance="@style/label_ship"
