<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#F5F5FA"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#F5F5FA"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/acc_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/account_avatar_item"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="50dp"
                android:layout_marginTop="75dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:id="@+id/account_avartar"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/a1" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:id="@+id/navigation_box"
                android:layout_width="72dp"
                android:layout_height="27dp"
                android:background="@drawable/_navigation_box"
                android:layout_marginRight="16dp"
                android:layout_marginTop="14.5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/dots_account_main"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/dots"
                    android:clipToOutline="true" />

                <View
                    android:id="@+id/thin"
                    android:layout_width="2dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/dots_account_main"
                    android:background="@drawable/thin" />

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/roundx_account_main"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/thin"
                    android:background="@drawable/roundx"
                    android:clipToOutline="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/cart_icon_account_main"
                android:layout_width="27dp"
                android:layout_height="27dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/navigation_box"
                android:layout_marginRight="10dp"
                android:layout_marginTop="14.5dp"
                android:background="@drawable/additonal_i"
                tools:layout_editor_absoluteX="296dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/title_usern"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:gravity="center_horizontal|top"
                android:lineSpacingExtra="5sp"
                android:text="Tên người dùng"
                android:textAppearance="@style/title_usern"
                android:textStyle="bold"
                android:translationY="-2.61sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/account_avatar_item" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/shopping_bo"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shopping_bo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/home_item"
            app:layout_constraintStart_toStartOf="@id/shopping_bo"
            app:layout_constraintTop_toTopOf="@id/shopping_bo"
            app:layout_constraintBottom_toBottomOf="@id/shopping_bo"
            app:layout_constraintEnd_toStartOf="@id/category_item"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@drawable/bottom_bar___home_item"
            />
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/category_item"
            app:layout_constraintTop_toTopOf="@id/shopping_bo"
            app:layout_constraintBottom_toBottomOf="@id/shopping_bo"
            app:layout_constraintStart_toEndOf="@id/home_item"
            app:layout_constraintEnd_toStartOf="@id/search_item"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_toRightOf="@id/home_item"
            android:background="@drawable/bottom_bar___category_item"
            />
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/search_item"
            app:layout_constraintTop_toTopOf="@id/shopping_bo"
            app:layout_constraintBottom_toBottomOf="@id/shopping_bo"
            app:layout_constraintStart_toEndOf="@id/category_item"
            app:layout_constraintEnd_toStartOf="@id/account_item"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_toRightOf="@id/category_item"
            android:background="@drawable/bottom_bar___search_item"
            />
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/account_item"
            app:layout_constraintTop_toTopOf="@id/shopping_bo"
            app:layout_constraintBottom_toBottomOf="@id/shopping_bo"
            app:layout_constraintEnd_toEndOf="@id/shopping_bo"
            app:layout_constraintStart_toEndOf="@id/search_item"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_toRightOf="@id/search_item"
            android:background="@drawable/bottom_bar___account_blue"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>