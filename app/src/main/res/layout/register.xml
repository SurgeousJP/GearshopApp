<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wayback"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backward_button"
            android:layout_width="11dp"
            android:layout_height="16dp"
            android:layout_marginLeft="24dp"
            android:background="@drawable/wayback_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineHeight="24sp"
        android:lineSpacingExtra="5sp"
        android:text="Đăng kí tài khoản"
        android:textAppearance="@style/title_empty"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wayback" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineHeight="24sp"
        android:lineSpacingExtra="5sp"
        android:text="GEARSHOP"
        android:textStyle="bold"
        android:textAppearance="@style/title_empty"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/registerform"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2">
        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:lineHeight="24sp"
            android:lineSpacingExtra="5sp"
            android:text="Họ và tên"
            android:textStyle="bold"
            android:textAppearance="@style/title_empty"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/name_box"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/normal_box_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name">

            <EditText
                android:id="@+id/register_name_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="20dp"
                android:background="@null"
                android:hint="Họ và tên"
                android:textColor="#808089"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            android:lineHeight="24sp"
            android:lineSpacingExtra="5sp"
            android:text="Tên đăng nhập"
            android:textStyle="bold"
            android:textAppearance="@style/title_empty"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_box" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/username_box"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/normal_box_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username">

            <EditText
                android:id="@+id/register_username_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="20dp"
                android:background="@null"
                android:hint="Tên đăng nhập"
                android:textColor="#808089"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            android:lineHeight="24sp"
            android:lineSpacingExtra="5sp"
            android:text="Email"
            android:textStyle="bold"
            android:textAppearance="@style/title_empty"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username_box" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/email_box"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/normal_box_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email">

            <EditText
                android:id="@+id/register_email_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="20dp"
                android:background="@null"
                android:hint="Email"
                android:textColor="#808089"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            android:lineHeight="24sp"
            android:lineSpacingExtra="5sp"
            android:text="Mật khẩu"
            android:textStyle="bold"
            android:textAppearance="@style/title_empty"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_box" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/password_box"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/normal_box_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password">

            <EditText
                android:id="@+id/register_password_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="20dp"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="Mật khẩu"
                android:textColor="#808089"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/confirm_password"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            android:lineHeight="24sp"
            android:lineSpacingExtra="5sp"
            android:text="Xác nhận mật khẩu"
            android:textStyle="bold"
            android:textAppearance="@style/title_empty"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password_box" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/confirm_password_box"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/normal_box_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirm_password">

            <EditText
                android:id="@+id/confirm_register_password_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="20dp"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="Xác nhận mật khẩu"
                android:textColor="#808089"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_button"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/blue_box"
        android:text="Đăng ký"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerform">
    </androidx.appcompat.widget.AppCompatButton>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:id="@+id/endtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/normaltext"
            android:layout_width="130dp"
            android:layout_height="24dp"
            android:text="Bạn đã có tài khoản?"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/register_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_in_navigate_button"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:background="@color/white"
            android:textAllCaps="false"
            android:text="Đăng nhập"
            android:textColor="#1A94FF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/normaltext"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>