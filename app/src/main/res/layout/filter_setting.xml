<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/components_"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/search_input"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/vector"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/x"
            android:layout_marginRight="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_filte"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="5sp"
            android:text="Lọc"
            android:textAppearance="@style/title_filter"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="396dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/section"
            android:layout_width="0dp"
            android:layout_height="224dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/label_price"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:gravity="top"
                android:lineSpacingExtra="5sp"
                android:text="Giá"
                android:layout_marginTop="12dp"
                android:textSize="20dp"
                android:layout_marginHorizontal="36dp"
                android:textAppearance="@style/label_filter"
                android:textStyle="bold"
                android:translationY="-2.32sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pricebox1"
                android:layout_width="131dp"
                android:layout_height="30dp"
                app:layout_constraintEnd_toStartOf="@id/pricebox2"
                android:layout_marginTop="44dp"
                android:background="@drawable/normal_box_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_price1"
                    android:layout_width="0dp"
                    android:layout_height="21dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="4sp"
                    android:text="Duới 100.000 đ"
                    android:textColor="#27272A"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pricebox2"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginTop="44dp"
                android:background="@drawable/normal_box_2"
                app:layout_constraintStart_toEndOf="@id/pricebox1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_price2"
                    android:layout_width="0dp"
                    android:layout_height="21dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="4sp"
                    android:text="100.000 đ - 200.000 đ"
                    android:textColor="#27272A"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pricebox3"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginTop="82dp"
                android:background="@drawable/normal_box_2"
                app:layout_constraintEnd_toStartOf="@id/pricebox4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_price3"
                    android:layout_width="0dp"
                    android:layout_height="21dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="4sp"
                    android:text="200.000 đ - 750.000 đ"
                    android:textColor="#27272A"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pricebox4"
                android:layout_width="131dp"
                android:layout_height="30dp"
                android:layout_marginTop="82dp"
                android:background="@drawable/normal_box_2"
                app:layout_constraintStart_toEndOf="@id/pricebox3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_price4"
                    android:layout_width="0dp"
                    android:layout_height="21dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="4sp"
                    android:text="Trên 750.000 đ"
                    android:textColor="#27272A"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/custom_pric"
                android:layout_width="338dp"
                android:layout_height="94dp"
                android:layout_marginTop="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="21dp"
                    android:gravity="top"
                    android:lineSpacingExtra="4sp"
                    android:text="Hoặc chọn khoảng giá"
                    android:textAppearance="@style/description"
                    android:translationY="-2.03sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fields"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/description">

                    <TextView
                        android:id="@+id/label_price1"
                        android:layout_width="0dp"
                        android:layout_height="21dp"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="4sp"
                        android:text="Từ"
                        android:textAppearance="@style/label_price"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@id/label_price2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/label_price2"
                        android:layout_width="0dp"
                        android:layout_height="21dp"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="4sp"
                        android:text="Đến"
                        android:textAppearance="@style/label_price"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/label_price1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/input_field1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/border_box"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toStartOf="@id/input_field2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_price1">

                        <EditText
                            android:id="@+id/low_price"
                            android:layout_width="103dp"
                            android:layout_height="48dp"
                            android:background="@null"
                            android:text="Giá thấp nhất"
                            android:textColor="#808089"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toStartOf="@id/thin"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/thin"
                            android:layout_width="2dp"
                            android:layout_height="21dp"
                            android:background="@drawable/thin"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toStartOf="@id/label"
                            app:layout_constraintStart_toEndOf="@id/low_price"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/label"
                            android:layout_width="9dp"
                            android:layout_height="21dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:lineSpacingExtra="4sp"
                            android:text="đ"
                            android:textAppearance="@style/label_price"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/thin"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/input_field2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:background="@drawable/border_box"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toEndOf="@id/input_field1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_price2">

                        <EditText
                            android:id="@+id/high_price"
                            android:layout_width="103dp"
                            android:layout_height="48dp"
                            android:background="@null"
                            android:text="Giá cao nhất"
                            android:textColor="#808089"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toStartOf="@id/thin2"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/thin2"
                            android:layout_width="2dp"
                            android:layout_height="21dp"
                            android:background="@drawable/thin"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toStartOf="@id/label2"
                            app:layout_constraintStart_toEndOf="@id/high_price"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/label2"
                            android:layout_width="9dp"
                            android:layout_height="21dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center_horizontal|center_vertical"
                            android:lineSpacingExtra="4sp"
                            android:text="đ"
                            android:textAppearance="@style/label_price"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/thin2"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/none"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:background="#DDDDE3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/section"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/type_panel"
            android:layout_width="0dp"
            android:layout_height="92dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/none">

            <TextView
                android:id="@+id/label_filte"
                android:layout_width="328dp"
                android:layout_height="24dp"
                android:text="Loại sản phẩm"
                android:layout_marginTop="12dp"
                android:textAppearance="@style/label_filter"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/section_con"
                android:layout_width="328dp"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/label_filte"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/chip1"
                    android:layout_width="87dp"
                    android:layout_height="32dp"
                    android:background="@drawable/normal_box"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/content_pro1"
                        android:layout_width="0dp"
                        android:layout_height="21dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:lineSpacingExtra="4sp"
                        android:text="Hàng mới"
                        android:textAppearance="@style/content_pro"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/chip2"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/normal_box_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/chip1"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/content_pro2"
                        android:layout_width="0dp"
                        android:layout_height="21dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:lineSpacingExtra="4sp"
                        android:text="Đang giảm giá"
                        android:textAppearance="@style/content_pro"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/none2"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:background="#DDDDE3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/type_panel"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button_bar"
            android:layout_width="0dp"
            android:layout_height="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/brand_button_1"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@drawable/blue_box"
                android:clipToOutline="true"
                app:layout_constraintEnd_toStartOf="@id/brand_button_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/cta_reset"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="5sp"
                    android:text="Bỏ lọc"
                    android:textStyle="bold"
                    android:textAppearance="@style/cta_reset_0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/brand_button_2"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@drawable/fill_blue_box"
                android:clipToOutline="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/brand_button_1"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/cta_apply"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="5sp"
                    android:text="Áp dụng"
                    android:textAppearance="@style/cta_apply_0"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>