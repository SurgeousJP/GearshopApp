<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_item"
    android:layout_width="181.5dp"
    android:layout_height="263.5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_image"
        android:layout_width="181.5dp"
        android:layout_height="181.5dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white">
        <androidx.cardview.widget.CardView
            android:layout_width="181.5dp"
            android:layout_height="181.5dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/item_image_list_item"
                android:layout_width="181.5dp"
                android:layout_height="181.5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/a1" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/module_product"
        android:layout_width="181.5dp"
        android:layout_height="66dp"
        android:layout_below="@id/item_image"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/label_product"
            android:layout_width="181.5dp"
            android:layout_height="21dp"
            android:text="Tên sản phẩm"
            android:layout_marginLeft="1dp"
            android:textAppearance="@style/label_product"
            android:lineSpacingExtra="4sp"
            android:translationY="-2.03sp"
            android:gravity="top"
            android:lineHeight="21sp"
            />
    </RelativeLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/module_rati"
        android:layout_width="181.5dp"
        android:layout_height="18dp"
        android:layout_below="@id/item_image"
        android:layout_marginTop="33dp">
        <View
            android:id="@+id/star1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/star"
            android:elevation="4dp"
            />
        <View
            android:id="@+id/star2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/star"
            android:elevation="4dp"
            android:layout_toRightOf="@id/star1"
            />
        <View
            android:id="@+id/star3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/star"
            android:elevation="4dp"
            android:layout_toRightOf="@id/star2"
            />
        <View
            android:id="@+id/star4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/star"
            android:elevation="4dp"
            android:layout_toRightOf="@id/star3"
            />
        <View
            android:id="@+id/star5"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/star"
            android:elevation="4dp"
            android:layout_toRightOf="@id/star4"
            />
        <TextView
            android:id="@+id/rating_number"
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:text="(4.4)"
            android:lineHeight="15dp"
            android:layout_toRightOf="@id/star5"
            android:layout_marginLeft="4dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/module_price"
        android:layout_width="181.5dp"
        android:layout_height="21dp"
        android:layout_below="@id/module_rati"
        android:layout_marginTop="4dp">
        <TextView
            android:id="@+id/selling_price"
            android:layout_width="64dp"
            android:layout_height="21dp"
            android:text="00.000đ"
            android:textStyle="bold"
            android:layout_marginLeft="1dp"
            android:textAppearance="@style/selling_price"
            android:lineSpacingExtra="4sp"
            />

        <RelativeLayout
            android:id="@+id/badge"
            android:layout_width="34dp"
            android:layout_height="21dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/selling_price"
            android:background="@drawable/badge">
            <TextView
                android:id="@+id/text"
                android:layout_width="26dp"
                android:layout_height="15dp"
                android:text="10%"
                android:layout_marginLeft="3dp"
                android:textStyle="bold"
                android:textAppearance="@style/text"
                android:lineSpacingExtra="3sp"
                android:gravity="center_horizontal|center_vertical"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>