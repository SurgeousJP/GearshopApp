<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listview_category"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cart_box">
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="@id/listview_category"
        app:layout_constraintBottom_toBottomOf="@id/listview_category"
        app:layout_constraintStart_toStartOf="@id/listview_category"
        android:id="@+id/list_category"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="16dp"
        android:layout_marginVertical="16dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white">
        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/item_image_listview_categoty"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/a1" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/label_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="14dp"
        android:lineSpacingExtra="4sp"
        android:text="Danh má»¥c 1"
        android:singleLine="false"
        android:textColor="#27272A"
        android:textSize="24sp"
        android:textStyle="bold"
        android:translationY="-2.03sp"
        app:layout_constraintBottom_toBottomOf="@id/listview_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_category"
        app:layout_constraintTop_toTopOf="@id/listview_category" />
</androidx.constraintlayout.widget.ConstraintLayout>